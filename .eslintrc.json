{
  "root": true,
  "extends": [
    "next/core-web-vitals"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": { "version": "detect" }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "no-debugger": "error",
    "eqeqeq": ["error", "always"],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "no-console": [
      "warn",
      { "allow": ["warn", "error"] }
    ],
    "jsx-a11y/no-redundant-roles": "error"
  }
}
